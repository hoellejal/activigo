<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/marginBetweenWidget">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="@string/user"
            android:gravity="center"/>
        <EditText
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="@string/user"
            android:backgroundTint="@color/violetActivigo"
            android:inputType="textPersonName"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/marginBetweenWidget">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="@string/mdp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="@string/mdp"
            android:backgroundTint="@color/violetActivigo"
            android:inputType="textPassword"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginBottom="@dimen/marginBetweenItemListActivity"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/valider"
            android:layout_marginTop="@dimen/marginBetweenWidget"
            android:layout_marginRight="@dimen/marginLeftButtons"
            android:background="@drawable/zone_texte_bord_rond"
            android:backgroundTint="@color/bleuActivigo"
            android:padding="@dimen/paddingButton"
            android:text="Valider"
            android:onClick="inscriptionSend"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/marginBetweenWidget"
            android:background="@drawable/zone_texte_bord_rond"
            android:layout_marginLeft="@dimen/marginLeftButtons"
            android:backgroundTint="@color/colorAccent"
            android:padding="@dimen/paddingButton"
            android:id="@+id/annuler"
            android:text="Annuler"
            android:onClick="inscriptionCancel"/>

    </LinearLayout>

</LinearLayout>



