<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/zone_texte_bord_rond"
    android:layout_marginTop="@dimen/marginBetweenItemListActivity">

    <ImageView
        android:id="@+id/imageActivite"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/heightImageActivityRow"
        android:layout_marginTop="@dimen/marginTopApplication"
        android:contentDescription="@string/descriptionImageActivite"
        android:src="@drawable/adventurealpsbackpack554609"/>

    <TextView
        android:id="@+id/titre_activite_resultat_recherche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginBetweekWidgetSameFamily"
        android:text="Titre de l'activitÃ©"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/marginBetweekWidgetSameFamily"
        android:layout_marginBottom="@dimen/marginTopApplication"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lieu_activite_resultat_recherche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/lieu" />

        <RatingBar
            android:id="@+id/note_activite_resultat_recherche"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginBetweenWidget"
            android:indeterminate="false"
            android:max="5"
            android:numStars="5"
            android:progress="3"
            android:progressTint="@color/jauneActivigo"/>

    </LinearLayout>





</LinearLayout>