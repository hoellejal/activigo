<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/marginBetweenWidget"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="@string/choixActivitesGlobal"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginBetweenWidget"
            android:gravity="center|right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="@string/quantiteActivitePasDuTout"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="@string/quantiteActivitePasVraiment"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="@string/quantiteActiviteSansPreference"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="@string/quantiteActivitePlutot"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="@string/quantiteActiviteBeaucoup"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginBetweenWidget"
            android:layout_marginRight="15dp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/critereSportif"
                android:textColor="@android:color/black" />

            <SeekBar
                android:layout_width="@dimen/seekBarWidthLarge"
                android:layout_height="wrap_content"
                android:max="4"
                android:progress="2"
                android:id="@+id/sportif"
                android:progressTint="@color/lightGray"
                android:thumb="@drawable/seek_bar_custom_thumb" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_marginRight="15dp"
            android:layout_marginTop="@dimen/marginBetweekWidgetSameFamily">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="@string/criterePeuConnu"/>

            <SeekBar
                android:layout_width="@dimen/seekBarWidthLarge"
                android:layout_height="wrap_content"
                android:max="4"
                android:progress="2"
                android:id="@+id/peu_connu"
                android:progressTint="@color/lightGray"
                android:thumb="@drawable/seek_bar_custom_thumb"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_marginRight="15dp"
            android:layout_marginTop="@dimen/marginBetweekWidgetSameFamily">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="@string/criterePopulaire"/>

            <SeekBar
                android:layout_width="@dimen/seekBarWidthLarge"
                android:layout_height="wrap_content"
                android:max="4"
                android:progress="2"
                android:id="@+id/populaire"
                android:progressTint="@color/lightGray"
                android:thumb="@drawable/seek_bar_custom_thumb"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_marginRight="15dp"
            android:layout_marginTop="@dimen/marginBetweekWidgetSameFamily">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="@string/critereNature"/>

            <SeekBar
                android:layout_width="@dimen/seekBarWidthLarge"
                android:layout_height="wrap_content"
                android:max="4"
                android:id="@+id/nature"
                android:progress="2"
                android:progressTint="@color/lightGray"
                android:thumb="@drawable/seek_bar_custom_thumb"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_marginRight="15dp"
            android:layout_marginTop="@dimen/marginBetweekWidgetSameFamily">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="@string/critereUrbain"/>

            <SeekBar
                android:layout_width="@dimen/seekBarWidthLarge"
                android:layout_height="wrap_content"
                android:max="4"
                android:id="@+id/urbain"
                android:progress="2"
                android:progressTint="@color/lightGray"
                android:thumb="@drawable/seek_bar_custom_thumb"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_marginRight="15dp"
            android:layout_marginTop="@dimen/marginBetweekWidgetSameFamily">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="@string/critereCulturelle"/>

            <SeekBar
                android:layout_width="@dimen/seekBarWidthLarge"
                android:layout_height="wrap_content"
                android:max="4"
                android:id="@+id/culturel"
                android:progress="2"
                android:progressTint="@color/lightGray"
                android:thumb="@drawable/seek_bar_custom_thumb"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_marginRight="15dp"
            android:layout_marginTop="@dimen/marginBetweekWidgetSameFamily">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="@string/critereGastronomique"/>

            <SeekBar
                android:layout_width="@dimen/seekBarWidthLarge"
                android:layout_height="wrap_content"
                android:max="4"
                android:progress="2"
                android:id="@+id/gastronomique"
                android:progressTint="@color/lightGray"
                android:thumb="@drawable/seek_bar_custom_thumb"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_marginRight="15dp"
            android:layout_marginTop="@dimen/marginBetweekWidgetSameFamily">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="@string/critereCollective"/>

            <SeekBar
                android:layout_width="@dimen/seekBarWidthLarge"
                android:layout_height="wrap_content"
                android:max="4"
                android:progress="2"
                android:id="@+id/groupe"
                android:progressTint="@color/lightGray"
                android:thumb="@drawable/seek_bar_custom_thumb"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_marginRight="15dp"
            android:layout_marginTop="@dimen/marginBetweekWidgetSameFamily">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="@string/critereDivertissement"/>

            <SeekBar
                android:layout_width="@dimen/seekBarWidthLarge"
                android:layout_height="wrap_content"
                android:max="4"
                android:progress="2"
                android:id="@+id/divertissement"
                android:progressTint="@color/lightGray"
                android:thumb="@drawable/seek_bar_custom_thumb"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/marginBetweenWidget">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="@string/choixActivitesBudget"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_marginTop="@dimen/marginBetweenWidget">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="@string/prixGratuit"
                android:layout_marginRight="10dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="@string/prixPeuCher"
                android:layout_marginRight="15dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="@string/prixAbordable"
                android:layout_marginRight="15dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="@string/prixCher"
                android:layout_marginRight="15dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="@string/prixTresCher"
                android:layout_marginRight="10dp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_marginRight="15dp"
            android:layout_marginTop="@dimen/marginBetweekWidgetSameFamily">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="@string/critereBudget"/>

            <SeekBar
                android:layout_width="@dimen/seekBarWidthLarge"
                android:layout_height="wrap_content"
                android:max="4"
                android:progress="2"
                android:id="@+id/budget"
                android:progressTint="@color/lightGray"
                android:thumb="@drawable/seek_bar_custom_thumb"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/marginBetweenWidget"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/marginLeftButtons"
                android:background="@drawable/zone_texte_bord_rond"
                android:backgroundTint="@color/bleuActivigo"
                android:padding="@dimen/paddingButton"
                android:text="Valider"
                android:id="@+id/valider"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/zone_texte_bord_rond"
                android:layout_marginLeft="@dimen/marginLeftButtons"
                android:backgroundTint="@color/jauneActivigo"
                android:padding="@dimen/paddingButton"
                android:text="Annuler"
                android:id="@+id/annuler"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>